{
    "name": "Happy Growth",
    "description": "Choose a quote, photo, and happiness moment of the day",
    "version": "1.0",
    "icons": {
        "16": "art/beuni_16.png",
        "32": "art/beuni_32.png",
        "48": "art/beuni_48.png",
        "128": "art/beuni_128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["jquery-3.7.1.min.js", "popup.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": ["storage"],
    "manifest_version": 3
}